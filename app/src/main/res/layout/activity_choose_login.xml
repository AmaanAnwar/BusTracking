<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".chooseLogin">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/skip1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:paddingTop="20dp"
            android:text="My Data is Secured ?"
            android:textColor="@color/md_black_1000"
            android:textSize="12dp"
            android:visibility="invisible" />

        <Space

            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />


        <TextView
            android:id="@+id/adminlogin"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@+id/space1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="179dp"
            android:layout_marginEnd="78dp"
            android:background="@drawable/edittextbackground"
            android:gravity="center"
            android:text="Login as Admin"
            android:textColor="@color/md_black_1000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/orr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adminlogin"
            android:layout_centerInParent="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="OR"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/studentlogin"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_below="@+id/orr"
            android:layout_centerInParent="true"
            android:background="@drawable/edittextbackground"
            android:gravity="center"
            android:text="Login as Student"
            android:textColor="@color/md_black_1000"
            android:textSize="20dp" />

        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/studentlogin" />

        <ImageView
            android:id="@+id/li"
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_below="@+id/space"
            android:layout_centerHorizontal="true"
            android:src="@color/white" />

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/li"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:paddingBottom="30dp"
            android:text="FORGOT PASSWORD ?"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/ski"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp"
            android:text="SKIP LOGIN"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="I agree Terms and Conditions by loging in"
            android:textColor="@color/white" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>